# Environment Configuration
# Copy this to .env and fill in your values

# Environment
ENV=dev
DEBUG=true

# Database (SQLite for local dev, PostgreSQL for production)
DATABASE_URL=sqlite:///./ai_generation.db
# DATABASE_URL=postgresql://user:password@localhost/ai_generation

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (generate strong secrets for production)
ACCESS_TOKEN_SECRET=your-access-token-secret-here
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
WORKER_TOKEN_SECRET=your-worker-token-secret-here

# Supabase (optional - for auth)
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# S3 Storage (Backblaze B2, Cloudflare R2, or AWS S3)
S3_ENDPOINT_URL=https://s3.us-west-004.backblazeb2.com
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Adult Payment Processors (for NSFW)
SEGPAY_MERCHANT_ID=your-segpay-merchant-id
SEGPAY_API_KEY=your-segpay-api-key

# GPU Workers
VAST_AI_API_KEY=your-vast-ai-api-key
RUNPOD_API_KEY=your-runpod-api-key

# LLM APIs
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GROQ_API_KEY=gsk_your-groq-api-key
TOGETHER_API_KEY=your-together-api-key

# Monitoring
SENTRY_DSN=your-sentry-dsn


